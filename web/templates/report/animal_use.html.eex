<h2>Animal Use Report</h2>

<%= render "date_range.html", conn: @conn, action: report_path(@conn, :animal_use) %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Animal</th>
      <th>Uses</th>
    </tr>
  </thead>
  <tbody>
  <%= for [animal | procedures] <- @view_model do %>
    <tr>
      <td><%= link animal.name, to: old_animal_path(@conn, :show, animal.id) %></td>
      <td>
        <ul>
          <%= for procedure <- procedures do %>
              <li>
                <%= link procedure.name, to: old_procedure_path(@conn, :show, procedure.id) %>
                (<%= procedure.use_count %>)
              </li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

