<h1>Login</h1>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn form -> %>

<div class="form-group">
  <%= text_input form, :login_name, placeholder: "Email", class: "form-control" %>
</div>

<div class="form-group">
  <%= password_input form, :password, placeholder: "Password", class: "form-control" %>
</div>

<%= submit "Log in", class: "btn btn-primary" %>

<% end %>
       
  
  
